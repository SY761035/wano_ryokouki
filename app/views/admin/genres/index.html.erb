<div class="container mt-5">
  <h4 class="title bg-light mb-5">ジャンル一覧・追加</h4>

  <div class="row my-4">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group mx-sm-3 mb-2">
          <%= f.label :name, "ジャンル名", class:'mr-5' %>
          <%= f.text_field :name, placeholder: 'ジャンル名' %>
        </div>
        <div class="col-2">
        <%= f.submit "新規登録", class: 'btn btn-success ml-5' %>
        </div>
      <% end %>
    </div>
  </div>

  <table class="table mt-3 col-lg-6">
        <thead class="bg-light">
          <tr>
            <th>ジャンル名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            <td><%= link_to '削除', admin_genre_path(genre), class: 'btn btn-sm btn-danger mr-2',  method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
          </tr>
          <% end %>
        </tbody>
  </table>
</div>