<div class="container">
  <div class="row">
    <div class="col-6">
      <h4 class="title bg-light"><strong><%= @user.name %>さんの詳細</strong></h4>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>ユーザーID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-2">
      <%#= link_to "削除", edit_admin_user_path, class:'btn btn-success px-3' %>
    </div>
    <div class="col-3">
      <%#=link_to "投稿一覧を見る", public_post_image_path, class:'btn btn-primary px-3' %>
    </div>
  </div>
</div>