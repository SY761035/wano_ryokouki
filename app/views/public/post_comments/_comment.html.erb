<p>コメント件数：<%= post_image.post_comments.count %></p>
<table>
  <tbody>
    <% post_image.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to user_path(post_comment.user) do %>
          <%= image_tag post_comment.user.get_profile_image(100,100) %><br>
          <%= post_comment.user.name %>
        <% end %>
      </td>
      <td><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></td>
      <td>
        <% if post_comment.user == current_user %>
          <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
