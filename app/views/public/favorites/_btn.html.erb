<% if post_image.favorited_by?(current_user) %>
  <%= link_to post_image_favorite_path(post_image), method: :delete, remote: true,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post_image.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_image_favorite_path(post_image), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post_image.favorites.count %>
  <% end %>
<% end %>