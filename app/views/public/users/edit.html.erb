<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class="text-dark bg-light p-4 mb-0">プロフィール編集</h2>
      <div class="form-body p-4">
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :ユーザー名 %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-4" %>
        <%= link_to :back do %>
          <button>戻る</button>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>