<div class="card-list-container py-5">
  <% users.each do |user| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <!--↓user.rbにget_profile_image(width, height)と記述しているためimage(サイズ,サイズ)にする-->
          <%= image_tag user.get_profile_image(80,80), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <strong><i class="far fa-user"></i><span> <%= user.name %></span></strong>
          </p>
          <p class="card-text">自己紹介：
            <%= user.introduction %>
          </p>
          <p class="card-text">このユーザーの詳細：
            <%= link_to '閲覧', user %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>