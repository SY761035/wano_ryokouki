<!--↓全てのユーザーの情報が出せるコード-->
<%#= @users.inspect %>

<div class="card-list-container py-5">
  <% @users.each do |user| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(user_path(user.id), class:"text-dark") do %>
              <strong><i class="far fa-user"></i><span> <%= user.name %></span></strong>
            <% end %>
          </p>
          
          <p class="card-text">自己紹介：</p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>